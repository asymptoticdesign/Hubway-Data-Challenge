import sys
import csv
import scipy
import hubwaylib as mysql

def descriptives(dataIn):
	"""
	Search for interesting data based on just duration data.
	"""
	dataOut = []
	for row in dataIn:
		#append duration (in seconds) to the list
		dataOut.append(float(row[2]))
	#apply some descriptives

	print "Mean",scipy.mean(dataOut)
	print "Standard Deviation",scipy.std(dataOut)
	print "Median",scipy.median(dataOut)
	print "Min",min(dataOut)
	print "Max",max(dataOut)
	print "Range",max(dataOut) - min(dataOut)
	freqList = [(x,dataOut.count(x)) for x in set(dataOut)]
	freqDict = {}
	for pairs in freqList:
		freqDict[pairs[0]] = pairs[1]
	print "Frequencies"
	for item in freqDict:
		print item,freqDict[item]
        return dataOut

duration = mysql.MySQLquery("SELECT duration FROM trips ORDER BY duration DESC;")

